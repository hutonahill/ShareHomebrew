{
  "manifest_version": 3,
  "name": "Sharing Homebrew",
  "version": "0.1",
  "description": "For Sharing D&D Beyond homebrew between accounts.",
  "icons": {
    "48": "html/logo.png"
  },
  "action": {
    "default_icon": "html/logo.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "*://www.dndbeyond.com/homebrew/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}

